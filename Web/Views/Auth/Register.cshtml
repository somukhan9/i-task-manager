@model RegisterViewModel

<div class="container mx-auto">
    <h2>Register</h2>
    <form asp-controller="Auth" asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="d-block text-danger"></span>
        </div>
        <div>
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control"/>
            <span asp-validation-for="Username" class="d-block text-danger"></span>
        </div>
        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="d-block text-danger"></span>
        </div>
        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password" class="d-block text-danger"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control"/>
            <span asp-validation-for="ConfirmPassword" class="d-block text-danger"></span>
        </div>
        @*<div>
            <label asp-for="Role"></label>
            <input asp-for="Role" class="form-control"/>
        </div>*@
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>